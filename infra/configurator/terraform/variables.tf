variable "prefix" {
  type    = string
  default = "negentropy"
}

variable "bucket_list" {
  type    = list(any)
  default = ["vault-conf"]
}

locals {
  google_compute_network_name  = "negentropy"
  vault_name                   = "vault-conf"
  region                       = "europe-west3"
  zone_suffix                  = "a"
  ip_cidr_range                = "10.20.0.0/24"
  root_disk_size_gb            = "30"
  instance_image               = "ubuntu-2004-focal-v20210415"
  image_family                 = "vault-conf"
  machine_type                 = "n1-standard-4"
  ssh_user                     = "user"
  ssh_public_key               = "ssh-rsa "
  cloud_config                 = ""
  bucket_list                  = ["vault-conf"]
  vault_conf_private_static_ip = "10.20.0.2"

  google_kms_key_ring_name = "vault-vs-test"
}
